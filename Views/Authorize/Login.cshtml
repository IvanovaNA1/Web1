@using Web1.Models
@model Web1.Models.LoginViewModel
<h2 align = "center">Вход на сайт</h2>

<form asp-action="Login" asp-controller="Authorize" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserLogin">Введите Email</label>
            <input type="text" asp-for="UserLogin" />
            <span asp-validation-for="UserLogin" />
        </div>
        <div class="form-group">
            <label asp-for="UserPassword">Введите пароль</label>
            <input asp-for="UserPassword" type="password"/>
            <span asp-validation-for="UserPassword" />
        </div>
        <div style="display:flex;">
            <div style="margin-right:30px; margin-left:90px;">
            <button type="submit" value="Войти" class="btn" >Войти</button>
            </div>
            <div align="right">
            <button type="button"  onclick="location.href='@Url.Action("Register", "Authorize")'">Регистрация</button>
            </div>
        </div>
    </div>
</form>