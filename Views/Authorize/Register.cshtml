@using Web1.Models
@model Web1.Models.RegistrationViewModel

<h2 align = "center">Регистрация</h2>

<form asp-action="Register" asp-controller="Authorize" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    @Html.ValidationSummary(true)
    <div>
        <div>
            <label asp-for="UserName">Ваше имя</label><br />
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="UserPhone">Номер телефона</label><br />
            <input type="text" asp-for="UserPhone" />
            <span asp-validation-for="UserPhone" />
        </div>
        <div>
            <label asp-for="UserLogin">Введите логин</label><br />
            <input type="text" asp-for="UserLogin" />
            <span asp-validation-for="UserLogin" />
        </div>
        <div>
            <label asp-for="UserPassword">Введите пароль</label><br />
            <input asp-for="UserPassword" />
            <span asp-validation-for="UserPassword" />
        </div>
        <div style="display:flex;">
            <div style="margin-right:30px; margin-left:90px;">
            <button type="submit" >Регистрация</button>
            </div>
            <div align="right">
            <button type="button" onclick="location.href='@Url.Action("Login", "Authorize")'">Войти</button>
            </div>
        </div>
    </div>
</form>
