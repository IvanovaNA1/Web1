@model Web1.Models.DBModels.User
@{
    ViewData["Title"] = "Профиль";
}
<h2 align="center">Личный кабинет</h2>

<form asp-action="Profile" asp-controller="Authorize" method="post">
    <input type="hidden" asp-for="UserLogin" />

    <div class="form-group">
        <label asp-for="UserName">Имя</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserPhone">Телефон</label>
        <input asp-for="UserPhone" class="form-control" />
        <span asp-validation-for="UserPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Логин</label>
        <input type="text" value="@Model.UserLogin" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="UserPassword">Пароль</label>
        <input asp-for="UserPassword" type="password" class="form-control" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Роль</label>
        <input type="text" value="@Model.Role.RoleName" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>