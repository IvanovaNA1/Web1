@model List<Web1.Models.DBModels.Service>
<h1 align="center">Добавление услуги</h1>
@using (Html.BeginForm("AddService", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <label for="text">Название услуги</label>
        @Html.TextBox("name", null, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="text">Описание</label>
        @Html.TextBox("description", null, new { @style = "height: 10px", @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="number">Стоимость</label>
        @Html.TextBox("price", null, new { @style = "height: 10px", @class = "form-control", required = "required" })
    </div>
    <button type="submit">Добавить</button>
}
